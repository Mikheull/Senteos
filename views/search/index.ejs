<%if((locals.response && locals.response.error) && response.error == true) {%>
	<div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
		<p class="font-bold">Attention</p>
		<p><%= response.message %></p>
	</div>
<%}%>

<form action="" method="post">
	<div class="mx-auto mt-32 max-w-lg">
		<div class="py-2">
			<label for="query" class="px-1 text-sm text-gray-700">Your sentence</label>
			<input type="text" name="query" id="query" class="appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-2 px-3 focus:border-gray-600" required>
		</div>
	</div>
</form>

<%if(locals.response) {%>
	<div class="mx-auto my-10 max-w-lg">
		<div class="py-2">
			<div class="text-gray-700">Votre phrase d'origine : <span class="text-indigo-600 font-bold"><%= response.data.sentence %></span></div>
		</div>

		<div class="mt-4">
			<% response.data.result.forEach(function(word) { %>

				<%if(word.success) {%>
					<iframe src="https://open.spotify.com/embed/track/<%= word.first_response.id %>" width="300" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
				<%}else{%>
					Custom - <%= word.initial_word %>
				<%}%>
				<br>

			<% }); %>
		</div>
	</div>
<%}%>
